{% autoescape false %}
    {% set classes = ['font-medium text-blue-600 dark:text-blue-500 hover:underline'] %}
    {% if not hideIcon %}
        {% set classes = classes|merge(['flex items-center gap-x-1']) %}
    {% endif %}
    <a href="#" data-model-content-url="activity/{{ activity.getId() }}.html" class="{{ classes|join(' ') }}" rel="nofollow">
        {% if not hideIcon %}
            {% if activity.getType().isVirtual() %}
                {{ renderSvg('zwift-logo', {'classes': 'w-3 shrink-0'}) }}
            {% else %}
                {{ renderSvg('bike', {'classes': 'h-4 shrink-0'}) }}
            {% endif %}
        {% endif %}
        {% if ellipses %}
            <span>{{ activity.getName()|ellipses(ellipses) }}</span>
        {% else %}
            <span class="{{ truncate ? 'truncate': '' }}">{{ activity.getName() }}</span>
        {% endif %}
    </a>
{% endautoescape %}