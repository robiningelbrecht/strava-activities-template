{% extends "html/base.html.twig" %}

{% block breadcrumbs %}
    <li>
        <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
            <a href="#" data-router-navigate="monthly-stats.html" class="ml-1 text-gray-700 hover:text-primary-600 md:ml-2 dark:text-gray-300 dark:hover:text-white">Monthly stats</a>
        </div>
    </li>
{% endblock %}
{% block content %}
    {% autoescape false %}
        <!-- MONTHLY STATS -->
        <div class="grid grid-cols-1 mb-4">
            <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm dark:border-gray-700 sm:p-6 dark:bg-gray-800">
                <div class="relative overflow-x-auto">
                    <table class="w-full text-sm text-center text-gray-500 dark:text-gray-400">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-2 py-3">

                            </th>
                            <th scope="col" class="px-2 py-3">
                                # rides
                            </th>
                            <th scope="col" class="px-2 py-3">
                                <div class="flex items-center justify-center">
                                    {{ svgDistance }}
                                </div>
                            </th>
                            <th scope="col" class="px-2 py-3">
                                <div class="flex items-center justify-center">
                                    {{ svgElevation }}
                                </div>
                            </th>
                            <th scope="col" class="px-2 py-3">
                                <div class="flex items-center justify-center">
                                    {{ svgTime }}
                                </div>
                            </th>
                            <th scope="col" class="px-2 py-3">
                                <div class="flex items-center justify-center">
                                    {{ svgChallenges }}
                                </div>
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for statistic in monthlyStatistics.getRows() %}
                            <tr class="{{ cycle(['bg-white border-b dark:bg-gray-900 dark:border-gray-700', 'border-b bg-gray-50 dark:bg-gray-800 dark:border-gray-700'], loop.index0) }}">
                                <th scope="row" class="w-36 px-2 py-2 text-right font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                    <a href="#" data-modal-id="month-{{ statistic.id }}" data-model-content-url="month/month-{{ statistic.id }}.html" class="text-blue-600 dark:text-blue-500 hover:underline">
                                        {{ statistic.month }}
                                    </a>
                                </th>
                                <td class="px-2 py-2">
                                    {{ statistic.numberOfRides }}
                                </td>
                                <td class="px-2 py-2">
                                    {{ statistic.totalDistance|number_format(0, '.', ' ') }}<span class="text-xs">km</span>
                                </td>
                                <td class="px-2 py-2">
                                    {{ statistic.totalElevation|number_format(0, '.', ' ') }}<span class="text-xs">m</span>
                                </td>
                                <td class="px-2 py-2">
                                    {{ statistic.movingTime }}
                                </td>
                                <td class="px-2 py-2">
                                    {{ statistic.challengesCompleted }}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr class="font-semibold text-gray-900 dark:text-white border-t-4 dark:border-gray-700">
                            <td class="px-2 py-2 text-right">
                                Virtual/Indoor
                            </td>
                            <td class="px-2 py-2">
                                {{ monthlyStatistics.getTotalsForZwift().numberOfRides }}
                            </td>
                            <td class="px-2 py-2">
                                {{ monthlyStatistics.getTotalsForZwift().totalDistance|number_format(0, '.', ' ') }}<span class="text-xs">km</span>
                            </td>
                            <td class="px-2 py-2">
                                {{ monthlyStatistics.getTotalsForZwift().totalElevation|number_format(0, '.', ' ') }}<span class="text-xs">m</span>
                            </td>
                            <td class="px-2 py-2">
                                {{ monthlyStatistics.getTotalsForZwift().movingTime }}
                            </td>
                            <td class="px-2 py-2">
                            </td>
                        </tr>
                        <tr class="font-semibold text-gray-900 dark:text-white">
                            <td class="px-2 py-2 text-right">
                                Outside
                            </td>
                            <td class="px-2 py-2">
                                {{ monthlyStatistics.getTotalsForOutsideBikeRides().numberOfRides }}
                            </td>
                            <td class="px-2 py-2">
                                {{ monthlyStatistics.getTotalsForOutsideBikeRides().totalDistance|number_format(0, '.', ' ') }}<span class="text-xs">km</span>
                            </td>
                            <td class="px-2 py-2">
                                {{ monthlyStatistics.getTotalsForOutsideBikeRides().totalElevation|number_format(0, '.', ' ') }}<span class="text-xs">m</span>
                            </td>
                            <td class="px-2 py-2">
                                {{ monthlyStatistics.getTotalsForOutsideBikeRides().movingTime }}
                            </td>
                            <td class="px-2 py-2">
                            </td>
                        </tr>
                        <tr class="font-semibold text-gray-900 dark:text-white">
                            <td class="px-2 py-2 text-right">
                                Total
                            </td>
                            <td class="px-2 py-2">
                                {{ monthlyStatistics.getTotals().numberOfRides }}
                            </td>
                            <td class="px-2 py-2">
                                {{ monthlyStatistics.getTotals().totalDistance|number_format(0, '.', ' ') }}<span class="text-xs">km</span>
                            </td>
                            <td class="px-2 py-2">
                                {{ monthlyStatistics.getTotals().totalElevation|number_format(0, '.', ' ') }}<span class="text-xs">m</span>
                            </td>
                            <td class="px-2 py-2">
                                {{ monthlyStatistics.getTotals().movingTime }}
                            </td>
                            <td class="px-2 py-2">
                            </td>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    {% endautoescape %}
{% endblock %}